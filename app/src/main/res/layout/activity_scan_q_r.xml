<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanQR"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <View
            android:id="@+id/vector"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="62dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/back"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="-410dp">
        <TextView
            android:id="@+id/scan_here"
            android:layout_width="259dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="76dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:text="SCAN HERE"
            android:textSize="20sp"
            android:textColor="#2A3137"
            android:gravity="center_horizontal|center_vertical"
            />
        <View
            android:id="@+id/qr"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="72dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            android:background="@drawable/qr"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="510dp"
        android:layout_marginLeft="-410dp">
        <Button
            android:id="@+id/btnhuyqr"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="140dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/white"
            android:text="HỦY"
            android:textColor="#E1512C"/>
        <Button
            android:id="@+id/btnnghi"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="-150dp"
            android:layout_below="@id/btnhuyqr"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/black"
            android:text="NGHỈ PHÉP"
            android:textColor="#E1512C"/>
    </LinearLayout>
</LinearLayout>