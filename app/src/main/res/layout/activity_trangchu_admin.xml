<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TrangchuAdmin">
    <RelativeLayout
        android:layout_width="415dp"
        android:layout_height="250dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#E1512C">
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:layout_marginTop="130sp"
            android:layout_marginLeft="20sp">
            <ImageView
                android:id="@+id/hinh_user"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/user"
                />
            <TextView
                android:id="@+id/usertext"
                android:layout_width="150dp"
                android:layout_height="78dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:text="Nguyễn Văn A"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:textStyle="bold"
                android:gravity="center_horizontal|center_vertical"
                />
            <TextView
                android:id="@+id/vitri"
                android:layout_width="150dp"
                android:layout_height="78dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="-150dp"
                android:layout_alignParentTop="true"
                app:layout_constraintTop_toBottomOf="@+id/usertext"
                android:layout_marginTop="35dp"
                android:text="Admin"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:gravity="center_horizontal|center_vertical"
                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="0dp">
        <Button
            android:id="@+id/scanBtn"
            android:layout_width="180sp"
            android:layout_height="80sp"
            android:backgroundTint="@color/black"
            android:text="CHẤM CÔNG"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            />
        <Button
            android:id="@+id/infoBtn"
            android:layout_width="180sp"
            android:layout_height="80sp"
            android:backgroundTint="@color/black"
            android:text="THÔNG TIN CÁ NHÂN"
            android:textAlignment="center"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/scanBtn"
            />
        <Button
            android:id="@+id/historyBtn"
            android:layout_width="180sp"
            android:layout_height="80sp"
            android:backgroundTint="@color/black"
            android:text="LỊCH SỬ CHẤM CÔNG"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/scanBtn"
            />
        <Button
            android:id="@+id/manageuBtn"
            android:layout_width="180sp"
            android:layout_height="80sp"
            android:backgroundTint="@color/black"
            android:text="QUẢN LÝ NHÂN VIÊN"
            android:textAlignment="center"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/historyBtn"
            android:layout_below="@id/infoBtn"
            />
        <Button
            android:id="@+id/manageposBtn"
            android:layout_width="180sp"
            android:layout_height="80sp"
            android:backgroundTint="@color/black"
            android:text="QUẢN LÝ CHỨC VỤ"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/historyBtn"
            />

        <Button
            android:id="@+id/managedeBtn"
            android:layout_width="180sp"
            android:layout_height="80sp"
            android:layout_below="@id/manageuBtn"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/manageposBtn"
            android:backgroundTint="@color/black"
            android:text="QUẢN LÝ PHÒNG BAN"
            android:textAlignment="center" />
        <Button
            android:id="@+id/statisticalBtn"
            android:layout_width="180sp"
            android:layout_height="80sp"
            android:backgroundTint="@color/black"
            android:text="THỐNG KÊ"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/manageposBtn"
            />

        <Button
            android:id="@+id/btnhome8"
            android:layout_width="180sp"
            android:layout_height="80sp"
            android:layout_below="@id/managedeBtn"
            android:layout_toRightOf="@id/statisticalBtn"
            android:backgroundTint="@color/black"
            android:text="ĐĂNG XUẤT"
            android:layout_marginLeft="15dp"
            android:textAlignment="center" />
    </RelativeLayout>
</LinearLayout>